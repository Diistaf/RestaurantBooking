            <Button.Template>
                <ControlTemplate TargetType="{x:Type Button}">
                    <StackPanel Orientation="Horizontal">
                        <Path Data="M31.5 0L0 31.5L31.5 63L38.9025 55.5975L14.8575 31.5L38.9025 7.4025L31.5 0Z" Fill="#0F9CEB" Opacity="0.63"/>
